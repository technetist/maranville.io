---
interface Props {
	title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8"/>
	<meta name="description" content="Astro description"/>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/site.webmanifest">
	<meta name="generator" content={Astro.generator}/>
	<meta name="description"
		  content="Full-stack web developer skilled in Laravel, Typescript, and Golang. Focused on scalable apps, security, and user experience. Checkout what I'm working on."/>
	<meta name="keyword" content="portfolio, javascript, developer, full-stack"/>
	<meta property="og:title" content="Adrien Maranville | Full-stack Developer"/>
	<meta property="og:description"
		  content="Full-stack web developer skilled in Laravel, Typescript, and Golang. Focused on scalable apps, security, and user experience. Checkout what I'm working on."/>
	<meta property="og:image" content="https://maranville.io/banner_main.png"/>
	<meta property="og:url" content="https://maranville.io"/>
	<meta property="og:type" content="website"/>
	<meta name="twitter:card" content="summary_large_image"/>
	<meta name="twitter:title" content="Adrien Maranville | Full-stack Developer"/>
	<meta name="twitter:description"
		  content="Full-stack web developer skilled in Laravel, Typescript, and Golang. Focused on scalable apps, security, and user experience. Checkout what I'm working on."/>
	<meta name="twitter:image" content="https://maranville.io/banner_main.png"/>
	<title>{title}</title>
</head>
<body class="bg-black flex flex-col justify-center items-center">
<slot/>
</body>
</html>

